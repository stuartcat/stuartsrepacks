var apiss = document.createElement("script");apiss.src = "https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js";document.body.appendChild(apiss);apiss.onload = function() {eval(` html2canvas(document.body).then(canvas => { document.body.innerHTML = '';  document.body.style.margin = "0"; document.body.appendChild(canvas); melt(canvas); }); function melt(canvas) { const ctx = canvas.getContext("2d"); const w = canvas.width; const h = canvas.height; setInterval(() => { for (let i = 0; i < 30; i++) { let sliceWidth = Math.floor(Math.random() * 10) + 5; let x = Math.floor(Math.random() * (w - sliceWidth)); let y = Math.floor(Math.random() * h); let sliceHeight = Math.floor(Math.random() * 15) + 5; ctx.drawImage( canvas, x, y, sliceWidth, sliceHeight, x + Math.floor(Math.random() * 5 - 2), y + 2, sliceWidth, sliceHeight  ); } }, 30); };`)}
